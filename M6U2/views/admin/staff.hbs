<section class="holder">
    <h2>{{title}}</h2>
    <div class="flex-center">
        <div class="card shadow p-3 mb-5 bg-body rounded text-center h-100">
            <div class="card-body">
                <div class="header">
                    <a type="button p-5" class="btn btn-primary" href="/admin/staff/add">Nuevo <i class="fa-solid fa-plus"></i></a>
                </div>
                <div class="body">
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nombre</td>
                                <th scope="col">Apellidos</td>
                                <th scope="col">Correo electrónico</td>
                                <th scope="col">Rol</td>
                                <th scope="col">Descripción</td>
                                <th scope="col">Imágen</td>
                                <th scope="col">Acciones</td>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each staff}}
                                <tr>
                                    <th class="table-light text-truncate" scope="row"><p class="d-inline-block text-truncate" style="max-width: 30rem;">{{this.id}}</p></td>
                                    <td class="table-light text-truncate"><p class="d-inline-block text-truncate" style="max-width: 30rem;">{{this.name}}</p></td>
                                    <td class="table-light text-truncate"><p class="d-inline-block text-truncate" style="max-width: 30rem;">{{this.lastname}}</p></td>
                                    <td class="table-light text-truncate"><p class="d-inline-block text-truncate" style="max-width: 30rem;">{{this.email}}</p></td>
                                    <td class="table-light text-truncate"><p class="d-inline-block text-truncate" style="max-width: 30rem;">{{this.role}}</p></td>
                                    <td class="table-light text-truncate"><p class="d-inline-block text-truncate" style="max-width: 30rem;">{{this.description}}</p></td>
                                    <td class="table-light text-truncate"><p class="d-inline-block text-truncate" style="max-width: 30rem;">{{this.image}}</p></td>
                                    <td class="table-light actions">
                                        <form method="PUT" action="/admin/staff/{{this.id}}/update">
                                            <button type="submitt button p-5" class="btn btn-primary"><i class="fas fa-pencil"></i></button>
                                        </form>
                                        <form method="GET" action="/admin/staff/{{this.id}}/delete">
                                            <button type="submitt button p-5" class="btn btn-primary"><i class="fas fa-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>